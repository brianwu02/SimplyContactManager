<h2 class="page-header text-center"><%= isNew ? 'Create' : 'Edit' %> Contact</h2>
<form role="form" class="form-horizontal contact-form">
  <div class="form-group">
    <label class="col-sm-4 control-label">Full name:</label>
    <div class="col-sm-6">
      <input type="text" class="form-control contact-name-input" value="<%- name %>">
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 control-label">Group:</label>
    <div class="col-sm-6">
      <input type="text" class="form-control contact-group-input" value="<%- group %>">
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 control-label">Address:</label>
    <div class="col-sm-6">
      <input type="text" class="form-control contact-address-input" value="<%- address %>">
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 control-label">Email:</label>
    <div class="col-sm-6">
      <input type="email" class="form-control contact-email-input" value="<%- email %>">
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 control-label">Phone:</label>
    <div class="col-sm-6">
      <input type="tel" class="form-control contact-phone-input" value="<%- phone %>">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-3">
      <button type="submit" class="btn btn-outline btn-lg btn-block submitBtn">Submit</button>
    </div>
    <div class="col-sm-3">
      <a href="" class="btn btn-outline btn-lg btn-block">Cancel</a>
    </div>
  </div>
</form>